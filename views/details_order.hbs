<div class="container">
      <h1>Thông tin chung</h1>
      <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                  <thead class="thead-dark">
                        <tr>
                              <th style="width: 10%;">#</th>
                              <th style="width: 40%;">Thời gian đặt hàng</th>
                              <th style="width: 20%;">Tổng giá tiền</th>
                              <th style="width: 10%;">Trạng thái</th>
                        </tr>
                  </thead>
                  <tbody>
                        {{#with order}}
                        <tr>
                              <td>
                                    <span>{{this.id_order}}</span>
                              </td>
                              <td>
                                    <span>{{date_time_format this.time_place}}</span>
                              </td>
                              <td>
                                    <span>{{number_format this.total_price}} đ</span>
                              </td>
                              <td>
                                    <span>{{order_status this.status}}</span>
                              </td>
                        </tr>
                        {{/with}}
                  </tbody>
            </table>
      </div>

      <h1>Thông tin chi tiết</h1>
      <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                  <thead class="thead-dark">
                        <tr>
                              <th style="width: 30%;">Hình ảnh</th>
                              <th style="width: 40%;">Tên sách</th>
                              <th style="width: 30%;">Giá tiền &amp; số lượng</th>
                        </tr>
                  </thead>
                  <tbody>
                        {{#each products}}
                        <tr>
                              <td>
                                    <img src="/resources/{{this.product.id_product}}.jpg" width="35%" alt="{{this.product.id_product}}.jpg">
                              </td>
                              <td>
                                    <a href="/details/{{this.product.id_product}}">{{this.product.name}}</a>
                              </td>
                              <td>
                                    <span>{{number_format this.price}} đ</span>
                                    <br>
                                    <span>Số lượng: {{this.amount}}</span>
                              </td>
                        </tr>
                        {{/each}}
                  </tbody>
            </table>
      </div>
</div>