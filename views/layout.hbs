<div class="modal fade" id="modalLogin" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header" style="float: left; display: flex;">
        <h4 class="modal-title" id="myModalLoginTitle" style="float: left; display: flex;">
          Đăng nhập
        </h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          ×</button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-12" style="border-right: 1px dotted #C2C2C2;padding-right: 30px;">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs">
              <li class="nav-item">
                <a id="tabLogIn" class="nav-link active" href="#Login" data-toggle="tab">Đăng nhập</a>
              </li>
              <li class="nav-item">
                <a id="tabSignUp" class="nav-link" href="#Registration" data-toggle="tab">Đăng ký</a>
              </li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
              <div class="tab-pane active" id="Login">
                <form role="form" class="form-horizontal">
                  <div class="form-group">
                    <label for="reEmail" class="col-sm-12 control-label">
                      Email</label>
                    <div class="col-sm-12">
                      <input type="email" class="form-control" id="reEmail" placeholder="Email" />
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="rePassword" class="col-sm-12 control-label">
                      Mật khẩu</label>
                    <div class="col-sm-12">
                      <input type="password" class="form-control" id="rePassword" placeholder="Mật khẩu" />
                    </div>
                  </div>
                  <div class="row">
                    <div class="container">
                      <button type="submit" class="btn btn-primary">
                        Đăng nhập</button>
                      <a href="javascript:;">Quên mật khẩu?</a>
                    </div>
                  </div>
                </form>
              </div>
              <div class="tab-pane" id="Registration">
                <form role="form" class="form-horizontal">
                  <div class="form-group">
                    <label for="name" class="col-md-12 control-label">
                      Họ tên</label>
                    <div class="col-sm-12">
                      <div class="row">
                        <div class="col-md-12">
                          <input type="text" class="form-control" id="name" placeholder="Nhập họ tên" />
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="email" class="col-sm-12 control-label">
                      Email</label>
                    <div class="col-sm-12">
                      <input type="email" class="form-control" id="email" placeholder="Nhập email" />
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="mobile" class="col-sm-12 control-label">
                      Di động</label>
                    <div class="col-sm-12">
                      <input type="text" class="form-control" id="mobile" placeholder="Nhập di động" />
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="password" class="col-sm-12 control-label">
                      Mật khẩu</label>
                    <div class="col-sm-12">
                      <input type="password" class="form-control" id="password" placeholder="Nhập mật khẩu" />
                    </div>
                  </div>
                  <div class="row">
                    <div class="container">
                      <div class="g-recaptcha" data-sitekey="6LdOB1YUAAAAAINaWeglCZ6OjoHSNxfrg9P4hoDn"></div>
                      <button type="button" class="btn btn-primary">
                        Đăng ký</button>
                      <button type="button" class="btn btn-default">
                        Cancel</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END Modal Login -->

<!-- BEGIN Modal Advance Search -->
<div class="modal fade" id="modalAdvanceSearch" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header" style="float: left; display: flex;">
        <h4 class="modal-title" style="float: left; display: flex;">
          Tìm kiếm nâng cao
        </h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          ×</button>
      </div>
      <div class="modal-body modal_information">
        <div class="row">
          <div class="col-md-3 entry_information">
            <label>Tiêu đề</label>
          </div>
          <div class="col-md-9 entry_information">
            <input class="form-control" type="text" placeholder="Hãy nhập tên tựa sách, báo, ..." />
          </div>

          <!-- thêm thông tin Tác giá -->
          <div class="col-md-3 entry_information">
            <label>Tác giả</label>
          </div>

          <div class="col-md-9 entry_information">
            <input class="form-control" type="text" placeholder="Hãy nhập tên tác giả" />
          </div>

          <div class="col-md-3 entry_information">
            <label>Nhà xuất bản</label>
          </div>
          <div class="col-md-9 entry_information">
            <select class="form-control" required>
              <option value="" disabled selected hidden>Chọn nhà xuất bản</option>
              {{#each manufactorer}}
              <option value="{{this.name}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>

          <div class="col-md-3 entry_information">
            <label>Thể loại</label>
          </div>
          <div class="col-md-9 entry_information">
            <select class="form-control" required>
              <option value="" disabled selected hidden>Chọn thể loại sách</option>
              {{#each type_book}}
              <option value="{{this.name}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>

          <div class="col-md-3 entry_information">
            <label>Giá</label>
          </div>
          <div class="col-md-9 entry_information">
            <!-- Sửa lại thành comboBox giá tiền -->
            <select class="form-control" required>
              <option value="" disabled selected hidden>Chọn giá tiền</option>
              <option value="less50">Dưới 50 ngàn</option>
              <option value="50to100">Từ 50 - 100 ngàn</option>
              <option value="100to300">Từ 100 - 300 ngàn</option>
              <option value="300to500">Từ 300 - 500 ngàn</option>
              <option value="greater500">Trên 500 ngàn</option>
            </select>
          </div>
        </div>

        <div style="margin: 20px; position: relative; text-align: center;">
          <button type="submit" class="btn btn-primary col-md-12">
            <span>
              <img src="resources/imgs/icons/search.png" />
              <span>Tìm kiếm</span>
            </span>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- END Modal Advance Search -->

