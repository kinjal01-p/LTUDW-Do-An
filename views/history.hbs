<div class="container">
    <h3>Lịch sử đơn hàng</h3>
    <div class="wrap">

        
        <div class="wrap-table">
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        {{#with orderInfo}}
                        <th >
                            <h6>#Đơn hàng {{this.id_order}}</h6>
                            
                            <h7>Đặt ngày: {{this.time}}</h7>
                            </th>
                        <th>
                            {{/with}}
                            <div style="margin:auto" class="p-2 mb-2 bg-success text-white"><span >Đã giao hàng</span></div>
                            
                        </th>
                    </tr>
                </thead>
                <tbody>
                     {{#each orders}}
                    <tr>
                        <th scope="row">
                            <div class="row">
                                <img style="height: 20%" src="resources/{{this.id_product}}.jpg" class="col-2">
                                <span class="col-10 titleItem">{{this.name}}</span>
                            </div>
                        </th>
                        <td style="width: 20%;">Qty: {{this.amount}}</td>
                       
                    </tr>
                     {{/each}}
                    
                </tbody>
            </table>
        </div>
        
    </div>
</div>

